@using System.Collections.Generic
@model IEnumerable<Insurance.Models.InsuranceViewModels.Customer>

@{
    ViewData["Title"] = "ShowCustomers";
}

<h2>ShowCustomers</h2>

<table class="table table-striped table-bordered" id="customer_table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Current Plan</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                @if (item.PlanType != null)
                {
                    <td>@item.PlanType.Name</td>
                }
                else
                {
                    <td>None</td>
                }
            </tr>
        }
    </tbody>

</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
