@using System.Collections
@model IEnumerable<Insurance.Models.InsuranceViewModels.Transaction>

@{
    ViewData["Title"] = "Transaction";
}

<h2>Transaction</h2>

<div class="row">

    <div class="col-md-2">

        <ul class="nav nav-pills nav-stacked  panel_search">
            <li role="presentation" class="form-group">
                <input class="form-control" type="text" id="name_filter" placeholder="Search for name" />
                <i class="glyphicon glyphicon-search form-control-feedback"></i>
            </li>
            <li role="presentation" class="form-group">
                <input class="form-control" type="text" id="plantype_filter" placeholder="Search for plan type" />
                <i class="glyphicon glyphicon-search form-control-feedback"></i>
            </li>
            <li role="presentation" class="form-group">
                <input class="form-control" type="text" id="startdate_filter" placeholder="Start date" />
                <i class="glyphicon glyphicon-search form-control-feedback"></i>
            </li>

            <li role="presentation" class="form-group">
                <input class="form-control" type="text" id="enddate_filter" placeholder="End date" />
                <i class="glyphicon glyphicon-search form-control-feedback"></i>
            </li>
            <li role="presentation" class="form-group" onclick="filter_by_date()">                
                <button class="btn btn-primary" >Filter</button>
            </li>
        </ul>
    </div>

    <div class="col-md-8">
        <table class="table table-striped table-bordered display" id="transaction_table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Deposited Money</th>
                    <th>Transaction Date</th>
                    <th>PlanType</th>
                </tr>
            </thead>
            <tbody id="transaction_table_body">
                @foreach (var item in Model)
            {
                    <tr>
                        <td id="name_row">@item.Client.Name</td>
                        <td id="money_row">@item.DepositedMoney</td>
                        <td id="transactiondate_row">@item.TransactionDate</td>
                        <td id="plantype_row">@item.PlanType.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-2">
        <h2><label class="label label-success ">4</label></h2>
    </div>
</div>
<script>
    $(document).ready(function () {



    });
</script>

<div class="row">
    <div class="col-md-12">
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
